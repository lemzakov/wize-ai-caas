# ==============================================
# WIZE Platform - Environment Configuration
# ==============================================

# -----------------
# Security Settings
# -----------------
# IMPORTANT: Generate a secure random key for encryption
# Use: openssl rand -hex 32
N8N_ENCRYPTION_KEY=your-super-secret-encryption-key-here

# -----------------
# Application URLs
# -----------------
# Host where n8n is accessible
N8N_HOST=localhost

# Protocol (http or https)
N8N_PROTOCOL=http

# Full webhook URL (used for webhook notifications)
WEBHOOK_URL=http://localhost:5678/

# Base API URL for the Vue frontend
VUE_APP_URL_BASE_API=http://localhost:5678/

# -----------------
# Database Settings
# -----------------
# Database type: postgresdb, mysqldb, or sqlite (default in docker-compose: postgresdb)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=n8n

# -----------------
# Redis Settings (Queue Management)
# -----------------
QUEUE_BULL_REDIS_HOST=redis
QUEUE_BULL_REDIS_PORT=6379
EXECUTIONS_MODE=queue

# -----------------
# Timezone Settings
# -----------------
TIMEZONE=Europe/Moscow
GENERIC_TIMEZONE=Europe/Moscow

# -----------------
# Execution Settings
# -----------------
# Save execution data
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true

# -----------------
# Logging Settings
# -----------------
# Log levels: silent, error, warn, info, verbose, debug
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# -----------------
# Development Settings
# -----------------
# Node environment
NODE_ENV=production

# -----------------
# Email Settings (Optional)
# -----------------
# N8N_EMAIL_MODE=smtp
# N8N_SMTP_HOST=
# N8N_SMTP_PORT=
# N8N_SMTP_USER=
# N8N_SMTP_PASS=
# N8N_SMTP_SENDER=

# -----------------
# Authentication (Optional)
# -----------------
# N8N_BASIC_AUTH_ACTIVE=true
# N8N_BASIC_AUTH_USER=
# N8N_BASIC_AUTH_PASSWORD=

# -----------------
# External Secrets (Optional)
# -----------------
# N8N_EXTERNAL_SECRETS_PROVIDER=
# N8N_EXTERNAL_SECRETS_VAULT_URL=
# N8N_EXTERNAL_SECRETS_VAULT_TOKEN=

# -----------------
# Metrics (Optional)
# -----------------
# N8N_METRICS=true
# N8N_METRICS_PREFIX=n8n_

# -----------------
# User Management (Optional)
# -----------------
# N8N_USER_MANAGEMENT_DISABLED=false
# N8N_USER_MANAGEMENT_JWT_SECRET=

# -----------------
# License (Optional for Enterprise)
# -----------------
# N8N_LICENSE_TENANT_ID=
# N8N_LICENSE_ACTIVATION_KEY=

# -----------------
# Vercel Deployment (if using Vercel)
# -----------------
# VERCEL=1
# VERCEL_ENV=production
